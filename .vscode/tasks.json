{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.1",
    "tasks": [
        {
            "label": "NPM publish",
            "type": "shell",
            "command": "npm publish --access=public",
            "dependsOn": [
                "GIT commit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "GIT commit",
            "type": "shell",
            "command": "git add .; git commit -m '${input:commit}'; git push -u origin master"
        }
    ],
    "inputs": [
        {
            "id": "commit",
            "description": "Git commit message:",
            "default": "",
            "type": "promptString"
        },
    ]
}